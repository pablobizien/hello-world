    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
        xmlns:tools="http://schemas.android.com/tools"  
        android:layout_width="match_parent"  
        android:layout_height="match_parent"  
        tools:context=".MainActivity"
        android:background="@drawable/eau_limpide" >  
      
       
        <TextView
            android:id="@+id/titreMain"
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:text="@string/titreMain"
            android:layout_centerHorizontal="true" 
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="20sp"
            />
                
        <TextView
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"
            android:id="@+id/space1"
            android:text="@string/space"
            android:layout_below="@+id/titreMain"
            />
        
        
          <ImageView
        android:id="@+id/cocktail_picture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cocktail"
       	android:contentDescription="@string/image_content_description"
       	android:layout_below="@+id/space1"
       	android:padding="10dp"
        />
         
          <TextView
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"
            android:id="@+id/space2"
            android:text="@string/space"
            android:layout_below="@+id/cocktail_picture"
            />
          
        <TextView
            android:id="@+id/infoSpin1"
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"
            android:text="@string/info1"
            android:layout_below="@+id/space2"
            android:padding="5dp"
            />
        
        
        <com.example.cocktail.MultiSelectionSpinner  
            android:id="@+id/mySpinner1"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content" 
            android:layout_below="@+id/infoSpin1"
            android:padding="5dp"
            />  
            
        <TextView
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"
            android:id="@+id/space3"
            android:text="@string/space"
            android:layout_below="@+id/mySpinner1"
            android:padding="5dp"
            />

                <TextView
            android:id="@+id/infoSpin2"
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"
            android:text="@string/info2"
            android:layout_below="@+id/space3"
            />
                
                
        <com.example.cocktail.MultiSelectionSpinner  
            android:id="@+id/mySpinner2"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content" 
            android:layout_below="@+id/infoSpin2"
            android:padding="5dp"
            /> 
            
        
        <Button  
            android:id="@+id/BoutonConsult"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:layout_below="@+id/mySpinner2"  
            android:layout_centerHorizontal="true"  
            android:layout_marginTop="40dp"  
            android:text="@string/boutonConsult"   
            android:onClick="onClick"/>  
    </RelativeLayout>  